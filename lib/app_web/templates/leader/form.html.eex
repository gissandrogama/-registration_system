<div class="flex justify-center my-2 mx-4 md:mx-0">
  <%= form_for @changeset, @action, [class: "w-full max-w-xl bg-white rounded-lg shadow-md p-6"], fn f -> %>
  <%= if @changeset.action do %>
  <div class="alert alert-danger">
    <p>Oops, something went wrong! Please check the errors below.</p>
  </div>
  <% end %>

  <div class="w-full md:w-full px-3 mb-6">
    <%= label f, :name, "nome", [class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"] %>
    <%= text_input f, :name, [class: "appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none", required: true] %>
    <span class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">
      <%= error_tag f, :name %>
    </span>
  </div>

  <div class="w-full md:w-full px-3 mb-6">
    <%= label f, :telefone, [class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"] %>
    <%= text_input f, :telefone, [class: "appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none", required: true] %>
    <span class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">
      <%= error_tag f, :telefone %>
    </span>
  </div>

  <div class="w-full md:w-full px-3 mb-6">
    <%= label f, :endereco, "Endereço", [class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"] %>
