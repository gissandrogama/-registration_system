      <%= error_tag f, :cecao %>
    </span>
  </div>

  <div class="w-full md:w-full px-3 mb-6">
    <%= label f, :cpf, [class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"] %>
