    <%= text_input f, :nm_mae, [class: "appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none", required: true] %>
    <span class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">
      <%= error_tag f, :nm_mae %>
    </span>
  </div>

  <div class="w-full md:w-full px-3 mb-6">
    <%= submit "Salvar", [class: "appearance-none block w-full bg-blue-300 text-gary-800 font-bold border border-gray-200 rounded-lg py-3 px-3 leading-tight hover:bg-blue-400 focus:outline-none focus:bg-white focus:border-gray-500"] %>
  </div>
  <% end %>
</div>
