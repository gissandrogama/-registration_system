    <%= text_input f, :zona, [class: "appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none", required: true] %>
    <span class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">
      <%= error_tag f, :zona %>
    </span>
  </div>

  <div class="w-full md:w-full px-3 mb-6">
    <%= label f, :cecao, "Sessão", [class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"] %>
