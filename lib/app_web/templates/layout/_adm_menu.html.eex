<ul>
<%= if @current_adm do %>
  <li><%= @current_adm.email %></li>
  <li><%= link "Settings", to: Routes.adm_settings_path(@conn, :edit) %></li>
  <li><%= link "Log out", to: Routes.adm_session_path(@conn, :delete), method: :delete %></li>
<% else %>
  <li><%= link "Register", to: Routes.adm_registration_path(@conn, :new) %></li>
  <li><%= link "Log in", to: Routes.adm_session_path(@conn, :new) %></li>
<% end %>
</ul>
